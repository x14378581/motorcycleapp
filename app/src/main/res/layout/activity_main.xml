<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john_.motorcycleapp.MainActivity">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="522dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-6dp">

        <ImageButton
            android:id="@+id/locationbtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="85dp"
            app:srcCompat="@android:drawable/ic_dialog_map"
            tools:layout_editor_absoluteX="244dp"
            tools:layout_editor_absoluteY="353dp" />

        <ImageButton
            android:id="@+id/folderbtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/locationbtn"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/camerabtn"
            android:layout_toRightOf="@+id/camerabtn"
            app:srcCompat="@android:drawable/sym_contact_card"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="353dp" />

        <ImageButton
            android:id="@+id/camerabtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button6"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="353dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@+id/locationbtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:text="Stream"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Motorcycle Dashcam"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
